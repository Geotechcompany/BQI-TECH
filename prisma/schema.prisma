generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Application {
  id                 String   @id @default(cuid())
  name               String
  email              String
  phoneNumber        String?
  location           String
  position           String
  resumeUrl          String
  hearAbout          String
  otherSource        String?
  experience         String
  salary             String
  status             String
  appliedDate        DateTime @default(now())
  shortlistedDate    DateTime?
  assessmentDate     DateTime?
  assessmentScore    Float?
  interviewDate      DateTime?
  interviewer        String?
  hireDate           DateTime?
  startDate          DateTime?
  disqualifiedDate   DateTime?
  disqualifiedReason String?
}

model JobPosting {
  id           String   @id @default(cuid())
  title        String
  department   String
  location     String
  description  String
  requirements String
  postedDate   DateTime @default(now())
}
